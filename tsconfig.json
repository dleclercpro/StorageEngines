{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./package*.json"
  ]
}